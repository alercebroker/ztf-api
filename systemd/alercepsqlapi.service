[Unit]
Description=PostgreSQL API served with gunicorn
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/opt/alerce/query-postgres-api/scripts
ExecStart=/usr/local/bin/gunicorn 'run_server:app' --bind unix:/opt/alerce/query-postgres-api/sock/psqlapi.sock --workers 2 --log-file /home/ubuntu/logs/psqlapi-develop.log

[Install]
WantedBy=multi-user.target
